<div class="container mt-4" x-data="userManagement()" x-init="init()">
  <h3>User Management</h3>
  <div class="card shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4>Users</h4>
      <button class="btn btn-primary" @click="openModal()"><i class="bi bi-plus-circle me-2"></i>Add User</button>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Role</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <template x-for="user in users" :key="user.id">
            <tr>
              <td x-text="user.id"></td>
              <td x-text="user.username"></td>
              <td x-text="user.role"></td>
              <td><span :class="user.status === 'enabled' ? 'badge bg-success' : 'badge bg-danger'" x-text="user.status"></span></td>
              <td x-text="new Date(user.created_at).toLocaleDateString()"></td>
              <td>
                <button class="btn btn-sm btn-info" @click="openModal(user)"><i class="bi bi-pencil"></i></button>
                <button class="btn btn-sm btn-danger" @click="deleteUser(user.id)"><i class="bi bi-trash"></i></button>
              </td>
            </tr>
          </template>
        </tbody>
      </table>
    </div>
    <!-- Pagination -->
    <nav class="mt-3">
      <ul class="pagination">
        <li class="page-item" :class="{ disabled: pagination.page === 1 }">
          <a class="page-link" href="#" @click.prevent="fetchUsers(pagination.page - 1)">Previous</a>
        </li>
        <template x-for="page in pagination.totalPages">
          <li class="page-item" :class="{ active: page === pagination.page }">
            <a class="page-link" href="#" @click.prevent="fetchUsers(page)" x-text="page"></a>
          </li>
        </template>
        <li class="page-item" :class="{ disabled: pagination.page === pagination.totalPages }">
          <a class="page-link" href="#" @click.prevent="fetchUsers(pagination.page + 1)">Next</a>
        </li>
      </ul>
    </nav>
  </div>

  <!-- Add/Edit User Modal -->
  <div class="modal fade" id="user-modal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="userModalLabel" x-text="modal.isEdit ? 'Edit User' : 'Add User'"></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form @submit.prevent="saveUser">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" x-model="modal.data.username" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" x-model="modal.data.password" :placeholder="modal.isEdit ? 'Leave blank to keep current' : ''">
            </div>
            <div class="mb-3">
              <label for="role" class="form-label">Role</label>
              <select class="form-select" x-model="modal.data.role" required>
                <option value="viewer">Viewer</option>
                <option value="admin">Admin</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="status" class="form-label">Status</label>
              <select class="form-select" x-model="modal.data.status" required>
                <option value="enabled">Enabled</option>
                <option value="disabled">Disabled</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Save User</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
